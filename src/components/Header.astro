---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/prompts', label: 'Prompts Gallery' },
];
---
<header class="border-b border-black/5 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
  <div class="container-tight flex items-center justify-between py-4">
    <a href="/" class="flex items-center gap-2 font-semibold tracking-tight">
      <img src="/logo.jpeg" alt="My Prompt Library logo" class="h-12 w-12 rounded-md object-cover" />
      <span>My Prompt Library</span>
    </a>
    <nav class="flex items-center gap-6 text-sm">
      {nav.map((n) => (
        <a class="link" href={n.href}>{n.label}</a>
      ))}
    </nav>
  </div>
</header>
