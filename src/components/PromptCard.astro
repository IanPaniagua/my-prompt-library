---
interface Props {
  title: string;
  description?: string;
  prompt: string;
  tags?: string[];
}

const { title, description, prompt, tags = [] } = Astro.props as Props;
---
<article class="card p-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="text-base font-semibold tracking-tight">{title}</h3>
      {description && <p class="mt-1 text-sm text-ink/60">{description}</p>}
    </div>
    {tags.length > 0 && (
      <div class="hidden md:flex flex-wrap gap-2">
        {tags.map((t) => <span class="badge">{t}</span>)}
      </div>
    )}
  </div>
  <pre class="mt-4 whitespace-pre-wrap rounded-xl bg-subtle/60 p-4 text-sm leading-relaxed text-ink/90">{prompt}</pre>
</article>
